{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "rootDir": "../src",
    "outDir": "./public/scripts",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["../src/**/*.ts"],
  "exclude": ["node_modules", "public/scripts"]
}